<?xml version="1.0" encoding="UTF-8"?>
<beans 
   xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:property-placeholder location="classpath:redmine.properties" />

	<bean id="redmineConfig" class="ru.runa.wfe.redmine.api.impl.RedmineConfigImpl">
    	<property name="uri" value="${redmine.url}"/>
    	<property name="login" value="${redmine.login}"/>
    	<property name="password" value="${redmine.password}"/>
  	</bean>
</beans>